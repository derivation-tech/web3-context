{
  "name": "@derivation-tech/web3-context",
  "version": "0.0.1",
  "description": "Common core utilities to interact with the web3 world",
  "author": "derivation-tech",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "postinstall": "npm run nx",
    "nx": "npx nx run-many --target=build --all",
    "deps": "pnpm -r i",
    "prepare": "husky",
    "lint": "npx eslint",
    "format": "npx prettier --write packages/**/*.ts apps/**/*.ts",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@eslint/js": "^9.9.1",
    "@nx/eslint": "20.0.6",
    "@nx/jest": "20.0.6",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "nx": "20.0.6",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.7",
    "sort-package-json": "^2.10.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/$1"
    },
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  },
  "engines": {
    "node": ">=16.20.2",
    "pnpm": ">=8"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "eslint": "^9.2.0"
      }
    }
  }
}
